                            a.href = downloadUrl;
                            a.download = `${title}.pdf`.replace(/[^a-z0-9]/gi, '_');
                            document.body.appendChild(a);
                            a.click();
                            window.URL.revokeObjectURL(downloadUrl);
                            a.remove();
                            
                            // Show success message
